FROM node:18-alpine

WORKDIR /app

# Copiar package.json y package-lock.json
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar el resto del c√≥digo
COPY . .

# Exponer puerto
EXPOSE 8080

# Comando para desarrollo
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "8080"]